<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title data-i18n="view_title">Ephemera Link - View Secret</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon/favicon-16x16.png">
    <link rel="manifest" href="/static/favicon/site.webmanifest">

    <!-- Styles and fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/styles.css" rel="stylesheet">
</head>
<body>
    <div class="center-container">
        <h1 class="text-center mt-4">Ephemera Link</h1>
        <div class="secret-container theme-card text-center">
            <h1 class="mb-4" data-i18n="view_heading">View Secret</h1>

            <form method="post" action="/retrieve">
                <ul class="p-0" style="list-style-type: none;">
                    <li>
                        <input type="hidden" name="id" value="{{ .id }}" />
                        <input type="hidden" name="token" value="{{ .token }}" />
                        <input id="retrieve" class="btn btn-primary" type="submit" name="submit" value="Show Secret"/>
                    </li>
                </ul>
            </form>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <button onclick="setLanguage('en'); translateButton('en')" class="btn btn-sm btn-outline-secondary">EN</button>
            <button onclick="setLanguage('ru'); translateButton('ru')" class="btn btn-sm btn-outline-secondary">RU</button>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/translations.js"></script>
    <script>
        const showElement = document.getElementById('retrieve');
        function translateButton(lang) {
            if (lang === 'en') {
                showElement.value = "Show Secret";
            } else if (lang === 'ru') {
                showElement.value = "Просмотреть секрет";
            }
        }
        translateButton(userLang);
    </script>
</body>
</html>
