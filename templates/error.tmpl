<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title data-i18n="error_title">Ephemera Link - Error</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon/favicon-16x16.png">
    <link rel="manifest" href="/static/favicon/site.webmanifest">

    <!-- Styles and fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/styles.css" rel="stylesheet">
</head>
<body>
    <div class="center-container">
        <h1 class="text-center mt-4">Ephemera Link</h1>
        <div class="secret-container theme-card text-center">
            <h1 class="text-danger mb-4" data-i18n="error_heading">Error</h1>
            <p class="mb-4" id="error">{{ .error }}</p>
            <a href="/" class="btn btn-primary" data-i18n="error_create">Create New Secret</a>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <button onclick="setLanguage('en'); translateError('en');" class="btn btn-sm btn-outline-secondary">EN</button>
            <button onclick="setLanguage('ru'); translateError('en');" class="btn btn-sm btn-outline-secondary">RU</button>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/translations.js"></script>
    <script>
        const errorElement = document.getElementById('error');
        function translateError(lang) {
            if (lang === 'en') {
                errorElement.textContent = "This secret has already been viewed or the link is invalid.";
            } else if (lang === 'ru') {
                errorElement.textContent = "Этот секрет уже был просмотрен или ссылка недействительна.";
            }
        }
        translateError(userLang);
    </script>
</body>
</html>
